{% trans_default_domain 'FOSUserBundle' %}


<div class="register-box">
    <div class="register-logo">
        <a href="#"><b>Kiddy</b></a>
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Creer un compte</p>

            {{ form_start(form, {'method': 'post', 'action': path('AjoutUser',{'role':role}), 'attr': {'class': 'fos_user_registration_register'}}) }}
            <div class="input-group mb-3">
                {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Prenom'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            {{  form_errors(form.prenom) }}

            <div class="input-group mb-3">
                {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Nom'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            {{ form_errors(form.nom) }}

            <div class="input-group mb-3">
                {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            {{ form_errors(form.email) }}
            <div class="input-group mb-3">
                {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Username'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            {{ form_errors(form.username) }}



            <div class="input-group mb-3">
                {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Mot de passe'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'Confirmer mot de passe'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            {{  form_errors(form.plainPassword) }}

            <div class="input-group mb-3">
                {{ form_widget(form.numtel,{'attr':{'class':'form-control','placeholder':'Numreo de telephone'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            {{  form_errors(form.plainPassword) }}


            <div class="input-group mb-3">
                <div class="custom-file">
                    {{ form_widget(form.image,{'attr':{'class':'custom-file-input'} }) }}
                    <label class="custom-file-label">Choisir une image</label>
                </div>
            </div>

            {{  form_errors(form.image) }}


            {% if role == "Parent" %}
                <div class="input-group mb-3">
                    {{ form_widget(form.datenaissance,{'attr':{'class':'form-control'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {{ form_widget(form.region,{'attr':{'class':'form-control'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {{ form_widget(form.ville,{'attr':{'class':'form-control','placeholder':'Ville'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {{ form_widget(form.rue,{'attr':{'class':'form-control','placeholder':'Rue'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {{ form_widget(form.codepostal,{'attr':{'class':'form-control','placeholder':'Code postal'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

            {% endif %}
            {% if role=="Employe" %}
            <div class="input-group mb-3">
                {{ form_widget(form.datenaissance,{'attr':{'class':'form-control'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                {{ form_widget(form.region,{'attr':{'class':'form-control'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                {{ form_widget(form.ville,{'attr':{'class':'form-control','placeholder':'Ville'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                {{ form_widget(form.rue,{'attr':{'class':'form-control','placeholder':'Rue'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                {{ form_widget(form.codepostal,{'attr':{'class':'form-control','placeholder':'Code postal'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>

                <div class="input-group mb-3">
                    {{ form_widget(form.salaire,{'attr':{'class':'form-control','placeholder':'Salaire'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    {{ form_widget(form.nbheures,{'attr':{'class':'form-control','placeholder':'Nombre d\'heures'} }) }}
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

            <div class="input-group mb-3">
                {{ form_widget(form.typeemploye,{'attr':{'class':'form-control'} }) }}
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>


            {% endif %}
            <div style="display: none">
                {{ form_rest(form) }}
            </div>
            <div>
                <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-block" />
            </div>
            {{ form_end(form) }}

