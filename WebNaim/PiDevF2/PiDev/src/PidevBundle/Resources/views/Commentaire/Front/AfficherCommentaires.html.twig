{% extends "Front.html.twig" %}
{% block cover %}
    url('{{ asset('front/images/hero_4.jpg') }}')
{% endblock %}
{% block content %}
    {% for c in commentaires %}
    <div class="card">
        <div class="card-body">
            <div class="testimonial-3-wrap">
                <div class="testimonial-3 d-flex">
                    <div class="vcard-wrap mr-5">
                        <img src="{{ asset("Images/"~c.IdUser.image) }}" alt="Image" class="vcard img-fluid">
                    </div>
                    <div class="text">
                        <h3>{{ c.IdUser.prenom }} {{ c.IdUser.nom }}</h3>
                        <p class="position">{{ c.IdUser.role }}</p>
                        <p>{{ c.texte }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
        {% else %}
            <div class="site-section bg-light">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-10">
                            <div class="info-box-content" align="center">
                                <span class="info-box-text text-center text-muted ">Pas De Commentaires</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    {% endfor %}

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form.texte,{'attr':{'class':'form-control form-control-sm','placeholder':'Ecrire un commentaire'} }) }}
    </div>
    {{ form_widget(form.Commenter,{'attr':{'class':'btn btn-primary'} } ) }}
    {{ form_end(form) }}









{% endblock %}