<ul class="navbar-nav ml-auto">
    <!-- Messages Dropdown Menu -->
    <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="far fa-bell"></i>
            {% if notifs|length >0 %}
            <span class="badge badge-danger navbar-badge">{{ notifs|length }}</span>
            {% endif %}
        </a>
        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            {% for n in notifs %}
                <a href="{{ path('SetSeen',{'notif':n.id}) }}" class="dropdown-item">
                    <!-- Message Start -->
                    <div class="media">
                        <img src="{{ asset("Images/"~n.icon) }}" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                        <div class="media-body">
                            <h3 class="dropdown-item-title">
                                {{ n.title }}
{#                                <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>#}
                            </h3>
                            <p class="text-sm">{{ n.description }}</p>
                            <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> {{ n.date|date('d/m/Y H:i') }}</p>
                        </div>
                    </div>
                    <!-- Message End -->
                </a>
                <div class="dropdown-divider"></div>
                {% else %}
                    <a href="#" class="dropdown-item dropdown-footer">Pas de notifications!</a>
            {% endfor %}
{#            <a href="#" class="dropdown-item dropdown-footer">See All Messages</a>#}
        </div>
    </li>
</ul>