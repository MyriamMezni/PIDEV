{% extends "Front.html.twig" %}

{% block content %}




















    <div class="site-section bg-teal">
        <div class="container">
            <div class="row justify-content-center text-center mb-5 section-2-title">
                <div class="col-md-6">
                    <span class="text-cursive h5 text-red">Les excursions</span>
                    <h3 class="text-white text-center">Les excursions</h3>
                    <p class="mb-5">Découvrir nos excursions</p>
                    <input class="form-control" type="text" value="" placeholder="Rechercher ">
                    {{ form(form) }}

                </div>
            </div>

            <div class="row align-items-stretch">
                {% for a in Excursion%}
                <div class="col-lg-4 col-md-6 mb-5">

                    <div class="post-entry-1 h-100 person-1 teal">

                        <img src="{{ asset("Images/"~a.image)}}" alt="Image"
                             class="img-fluid">

                        <div class="post-entry-1-contents">
                            <span class="meta">Nom</span>
                            <h2>{{ a.nom }}</h2>

                            <t5 class="d-block text-black">{{ a.heured }}</t5>
                            <t5 class="d-block text-black">{{ a.description }}</t5>
                            <t5 class="d-block text-black">{{ a.dateEvt|date }}</t5>
                            <t5 class="d-block text-black"> De : {{ a.depart }} à {{ a.destination }} </t5>
                        </div>
                    </div>
                </div>

                {% endfor %}





            </div>
        </div>
    </div>
























    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
{% endblock %}