

{% extends 'front.html.twig' %}

{% block content %}
<!DOCTYPE html>
<html>
<head>
    <title>Cours Complet Bootstrap 4</title>
    <meta charset='utf-8'>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
<div class="container">
    <h1>Formulaires</h1>
    {% set flashbag_notices = app.session.flashbag.get('success') %}
    {% if flashbag_notices is not empty %}
        <ul class="center">
            {% for notice in flashbag_notices %}

                <div class="alert alert-success">{{ notice }} </div>

            {% endfor %}

        </ul>
    {% endif %}

            <legend>Exemple de formulaire Bootstrap</legend>
            {{  form_start(form) }}
            <div class="form-group row col-sm-7">
                <div class="col">
                <label for="nom">Entrez votre nom</label>
                {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'nom'} } ) }} </div>
                <div class="col">
                <label for="prenom">Entrez votre prenom</label>
                    {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'prenom'} } ) }}  </div>
            </div>

    <div class="form-group row col-sm-7">
        <div class="col">
            <label for="nom">datenaissance</label>
            {{ form_widget(form.datenaissance,{'attr':{'class':'form-control'} } ) }} </div>
        <div class="col">
            <label for="prenom">image</label>
            {{ form_widget(form.image,{'attr':{'class':'form-control'} } ) }}  </div>
    </div>

    <div class="form-group row col-sm-7">
        <div class="col">
            <label for="nom">cantine</label>
            {{ form_widget(form.cantine,{'attr':{'class':'form-control'} } ) }} </div>
        <div class="col">
            <label for="prenom">document</label>
            {{ form_widget(form.document,{'attr':{'class':'form-control'} } ) }}  </div>
    </div>


    <div class="form-group row col-sm-7">

        <div class="col">    {{ form_widget(form.remarque,{'attr':{'class':'form-group','style':"height: 300px;width: 590px;",'placeholder':'remarque.....'} } ) }} </div>

    </div>









            <div class="form-group row col-sm-6">
                {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-info'} } ) }}
            </div>


    {{ form_end(form) }}
</div>
</body>
</html>

{% endblock %}