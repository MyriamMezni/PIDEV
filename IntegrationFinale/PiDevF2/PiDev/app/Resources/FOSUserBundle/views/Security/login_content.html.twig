{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="login-logo">
    <a href="#"><b>Kiddy</b></a>
</div>
<!-- /.login-logo -->
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Connexion</p>

        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group mb-3">
{#                <label for="username">{{ 'security.login.username'|trans }}</label>#}
                <input type="text" id="username" class="form-control" placeholder="Username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

            </div>




            <div class="form-group mb-3">
{#                <label for="password">{{ 'security.login.password'|trans }}</label>#}
                <input type="password" id="username" class="form-control" placeholder="Mot de passe" id="password" name="_password" required="required" autocomplete="current-password" />

            </div>

            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <input type="submit" class="btn btn-primary btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
                <!-- /.col -->
            </div>


        </form>

        <p class="mb-0">
            <a href="{{ path('AjoutUser',{'role':'Parent'}) }}" class="text-center">Creer un compte</a>
        </p>
    <!-- /.login-card-body -->
</div>

