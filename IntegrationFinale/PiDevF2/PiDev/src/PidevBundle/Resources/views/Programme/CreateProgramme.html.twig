

{% extends "Back.html.twig" %}


{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ajouter un programme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Programme</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    {{  form_start(form) }}
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Selectionner un fichier: </label>
        <div class="col-sm-10">
            {{ form_widget(form.cours,{'attr':{'class':'form-control'} } ) }}


        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Mois du  debut : </label>
        <div class="col-sm-10">
            {{ form_widget(form.debut,{'attr':{'class':'form-control'} } ) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Mois du fin  :</label>
        <div class="col-sm-10">
            {{ form_widget(form.fin,{'attr':{'class':'form-control'} } ) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Activit√© :</label>
        <div class="col-sm-10">
            {{ form_widget(form.idactivite,{'attr':{'class':'form-control'} } ) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-info'} } ) }}

    </div>





    {{ form_end(form) }}

{% endblock %}
