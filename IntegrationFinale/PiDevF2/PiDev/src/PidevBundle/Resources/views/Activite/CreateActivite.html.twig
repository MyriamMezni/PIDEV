


{% extends "Back.html.twig" %}


{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ajouter une activité</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Activité</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
   {{  form_start(form) }}
    <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label"> Intitule * : </label>
        <div class="col-sm-10">
            {{ form_widget(form.intitule,{'attr':{'class':'form-control'} } ) }}
        </div>
        </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Niveau * : </label>
        <div class="col-sm-10">
            {{ form_widget(form.niveau,{'attr':{'class':'form-control'} } ) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Responsable * :</label>
        <div class="col-sm-10">
            {{ form_widget(form.responsable,{'attr':{'class':'form-control'} } ) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Type * :</label>
        <div class="col-sm-10">
            {{ form_widget(form.type,{'attr':{'class':'form-control'} } ) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Heure Debut * :</label>
        <div class="col-sm-10">
            {{ form_widget(form.heuredebut,{'attr':{'class':'far fa-clock'} } ) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label"> Heure Fin * :</label>
        <div class="col-sm-10">
            {{ form_widget(form.heurefin,{'attr':{'class':'far fa-clock'} } ) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_widget(form.Ajouter,{'attr':{'class':'btn btn-info'} } ) }}

    </div>





{{ form_end(form) }}

{% endblock %}
