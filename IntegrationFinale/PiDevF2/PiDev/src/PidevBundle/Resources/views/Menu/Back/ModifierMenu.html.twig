{% extends "Back.html.twig" %}
{% block content %}
    {% if erreur == true %}
        <div class="alert-danger">Veuillez choisir au moins un jour de semaine</div>
    {% endif %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom,{'attr':{'class':'form-control'} }) }}

    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description,{'attr':{'class':'form-control'} }) }}
    </div>
    {{ form_label(form.image) }}
    <div class="custom-file">

        <label class="custom-file-label">Choisir une image</label>
        {{ form_widget(form.image,{'attr':{'class':'custom-file-input'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.Jours) }}
        {{ form_widget(form.Jours) }}
    </div>
    {{ form_widget(form.Valider,{'attr':{'class':'btn btn-primary'} }) }}
    {{ form_end(form) }}
{% endblock %}